<div class="global-container">
	<div class="header">
		<div>
			<h1><%= @restaurant.name %></h1>
			<h2><%= @restaurant.category %></h2>
		</div>
		<div>
			<h2><%= @restaurant.rating %></h2>
		</div>
	</div>

	<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant)  %></p>
	<% @reviews.each do |review| %>
		<div class="text-card">
			<p><%= review.content %></p>
			<p><%= review.rating %></p>
		</div>
	<% end %>
</div>
