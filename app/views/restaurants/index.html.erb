
<div class="banner">
	<h1>Find a restaurant near you!</h1>
</div>
<div class="cards-container">
	<% @restaurants.each do |restaurant| %>
		<%= link_to restaurant_path(restaurant) do %>
			<div class="card" style="width: 18rem;">
				<% url = "https://source.unsplash.com/1600x900/?#{%w(dish food restaurant cafe bar).sample},#{restaurant.category}" %>
				<img class="card-img-top" src=<%= "#{url}" %> alt="">
				<div class="card-content">
					<h4 class="card-title"><%= restaurant.name %></h2>
					<h5 class="card-subtitle mb-2 text-muted"><%= "#{restaurant.category.capitalize} restaurant" %></p>
				</div>	
			</div>
		<% end %>
	<% end %>
</div>